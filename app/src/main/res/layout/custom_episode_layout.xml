<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/episode_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginBottom="6dp"
        android:elevation="8dp"
        app:cardCornerRadius="5dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2f4fb"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/episode_image"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_gravity="end"
                android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="4dp">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f2f4fb">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Episode"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/episode_number"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#474f85"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="139"
                            android:textColor="@color/white"
                            android:textSize="30dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="11dp"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/episode_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/roboto"
                            android:text="Mystery of the Targeted Merchants"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/episode_airdate"
                                android:layout_width="95dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/roboto"
                                android:text="2006-06-07T00:00:00+00:00"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/filler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="4dp"
                                android:background="#fa7f72"
                                android:fontFamily="@font/roboto"
                                android:text="Filler Episode"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>
                    <!--            <LinearLayout-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="match_parent"-->
                    <!--                android:layout_gravity="end"-->
                    <!--                android:gravity="end"-->
                    <!--               >-->

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/play_it"-->
                    <!--                    android:layout_width="60dp"-->
                    <!--                    android:layout_height="60dp"-->
                    <!--                    android:src="@drawable/ic_play" />-->
                    <!--            </LinearLayout>-->

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toStartOf="@+id/get_movieserver"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/SeverLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/englishText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:background="@color/black"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="4dp"
                            android:text="ENG:"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/SeverLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/cardView3"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/movie_watch_online"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="#152D35"
                                android:backgroundTintMode="src_atop"
                                android:hapticFeedbackEnabled="true"
                                android:paddingHorizontal="8dp"
                                android:text="HD"
                                android:textAllCaps="false"
                                android:textColor="#4FBDBA"
                                android:visibility="gone" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="5dp"
                                app:cardCornerRadius="6dp">

                                <Button
                                    android:id="@+id/play_HD"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="4dp"
                                    android:background="#323232"
                                    android:backgroundTintMode="src_atop"
                                    android:hapticFeedbackEnabled="true"
                                    android:text="(SD)"
                                    android:textColor="#fff"
                                    android:visibility="visible" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                app:cardCornerRadius="6dp">

                                <Button
                                    android:id="@+id/play_FHD"
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:background="#323232"
                                    android:backgroundTintMode="src_atop"
                                    android:hapticFeedbackEnabled="true"
                                    android:text="(HD)"
                                    android:textColor="#fff" />


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                app:cardCornerRadius="6dp">

                                <de.mustafagercek.materialloadingbutton.LoadingButton
                                    android:id="@+id/play_FHDplus"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="4dp"
                                    android:background="#323232"
                                    android:backgroundTintMode="src_atop"
                                    android:hapticFeedbackEnabled="true"
                                    app:buttonText="ASH" />


                            </androidx.cardview.widget.CardView>

                            <!--                    <Button-->
                            <!--                        android:id="@+id/h_server"-->
                            <!--                        android:layout_width="wrap_content"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:backgroundTintMode="src_atop"-->
                            <!--                        android:hapticFeedbackEnabled="true"-->
                            <!--                        android:textColor="#4FBDBA"-->
                            <!--                        android:background="#152D35"-->
                            <!--                        android:paddingHorizontal="8dp"-->
                            <!--                        android:layout_marginHorizontal="2dp"-->
                            <!--                        android:clickable="true"-->
                            <!--                        android:text="Beta(H)"-->
                            <!--                        android:visibility="visible" />-->

                            <Button
                                android:id="@+id/download_link"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="#63B4B8"
                                android:clickable="false"
                                android:paddingHorizontal="10dp"
                                android:text="Download"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center"-->
<!--                android:orientation="horizontal">-->



<!--                <Button-->
<!--                    android:id="@+id/play_FHDplus"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginHorizontal="10dp"-->
<!--                    android:text="FHD2"-->
<!--                    android:visibility="gone" />-->


<!--            </LinearLayout>-->

            <TextView
                android:id="@+id/episode_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f4fb"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>