                        android:layout_height="wrap_content"
                        android:text="Prequel"
                        android:textSize="18dp"
                        android:padding="6dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="11dp"
                        tools:layout_editor_absoluteY="21dp" />

                    <Button
                        android:id="@+id/anime_prequel"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:layout_width="180dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_height="57dp"
                        android:paddingTop="4dp"
                        android:text="No Prequel Released" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/anime_sequel_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sequel"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18dp"
                        android:fontFamily="@font/roboto"
                        android:padding="6dp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="11dp"
                        tools:layout_editor_absoluteY="21dp" />

                    <Button
                        android:background="#fff"
                        android:id="@+id/anime_sequel"
                        android:layout_width="180dp"
                        android:layout_height="57dp"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"
                        android:textColor="@color/black"

                        android:paddingTop="4dp"
                        android:text="No Sequel Released" />
                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="4dp">

                <LinearLayout
                    android:id="@+id/anime_sideStory_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Side-Story"
                        android:textSize="18dp"
                        android:fontFamily="@font/roboto"
                        android:padding="6dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="11dp"
                        tools:layout_editor_absoluteY="21dp" />

                    <Button
                        android:id="@+id/anime_sideStory"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:layout_width="180dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"

                        android:layout_height="57dp"
                        android:paddingTop="4dp"
                        android:text="9.04" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/anime_summery_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summery"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18dp"
                        android:padding="6dp"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="11dp"
                        tools:layout_editor_absoluteY="21dp" />

                    <Button
                        android:background="#fff"
                        android:id="@+id/anime_summery"
                        android:layout_width="180dp"
                        android:layout_height="57dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:paddingTop="4dp"
                        android:text="581" />
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
