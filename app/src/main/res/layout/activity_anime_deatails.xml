<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimeDeatails"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF699F">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/anime_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="#C9FF90"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_period="1000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                </com.denzcoskun.imageslider.ImageSlider>

                <ImageView
                    android:id="@+id/anime_poster"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginTop="144dp"
                    android:background="#F38585"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.065"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/anime_pictures"
                    app:srcCompat="@drawable/si_logo" />

                <TextView
                    android:id="@+id/anime_title_eng"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Attack on Titan Final Season"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/anime_rank"
                    app:layout_constraintTop_toBottomOf="@+id/anime_pictures" />

                <TextView
                    android:id="@+id/anime_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:text="#1"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/anime_poster"
                    app:layout_constraintTop_toBottomOf="@+id/anime_pictures" />

                <TextView
                    android:id="@+id/anime_genres"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="19dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Action, Military, Super Power"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/anime_poster"
                    app:layout_constraintTop_toBottomOf="@+id/anime_title_eng" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Status : "
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/anime_poster"
                    app:layout_constraintTop_toBottomOf="@+id/anime_genres" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="103dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Currently Airing"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/anime_genres" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/anime_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="With Eren and company now at the shoreline and the threat of Marley looming, whatâ€™s next for the Scouts and their quest to unravel the mysteries of the Titans, humanity, and more? (Source: Funimation)"
                android:fontFamily="sans-serif-condensed"
                android:padding="16dp"
                android:paddingTop="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B8FFFE"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Original Title"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="11dp"
                    tools:layout_editor_absoluteY="21dp" />

                <TextView
                    android:id="@+id/anime_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Shingeki no Kyojin: The Final Season" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Duration"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="11dp"
                    tools:layout_editor_absoluteY="21dp" />

                <TextView
                    android:id="@+id/anime_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Unknown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="11dp"
                            tools:layout_editor_absoluteY="21dp" />

                        <TextView
                            android:id="@+id/anime_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="9.04" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Popularity"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="11dp"
                            tools:layout_editor_absoluteY="21dp" />

                        <TextView
                            android:id="@+id/anime_popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="4dp"
                            android:text="581" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Aired"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="11dp"
                    tools:layout_editor_absoluteY="21dp" />

                <TextView
                    android:id="@+id/anime_aired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Dec 7, 2020 to ?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Producers"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="11dp"
                    tools:layout_editor_absoluteY="21dp" />

                <TextView
                    android:id="@+id/anime_producers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Pony Canyon, Techno Sound" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Licensors"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="11dp"
                    tools:layout_editor_absoluteY="21dp" />

                <TextView
                    android:id="@+id/anime_licensors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Funimation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="Studios"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="11dp"
                    tools:layout_editor_absoluteY="21dp" />

                <TextView
                    android:id="@+id/anime_studios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="MAPPA" />


            </LinearLayout>



        </LinearLayout>
