<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimeDeatails"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtubePlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.google.android.youtube.player.YouTubePlayerView>

                        <ImageView
                            android:id="@+id/full_screen"
                            android:layout_height="40dp"
                            android:layout_width="40dp"
                            android:src="@drawable/ic_fullscreen"
                            android:layout_gravity="right"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="5dp"
                            />


         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                 android:id="@+id/animeImageView2"
             android:visibility="gone"/>

                        <TextView
                            android:id="@+id/title_Eng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/buenard_bold"
                            android:gravity="fill"
                            android:padding="15dp"
                            android:text="hello world"
                            android:textSize="24dp"
                            android:textStyle="bold" />

        <TextView
            android:id="@+id/short_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/actor"
            android:padding="10dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/deatils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/actor"
            android:padding="10dp"
            android:textSize="18dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/actor"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:text="Prequel"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:elevation="8dp"
                    android:id="@+id/prequel"
                    android:textColor="@color/white"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="@font/actor"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:text="No\nprequel"
                    android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/actor"
                    android:gravity="right"
                    android:paddingEnd="20dp"
                    android:paddingBottom="5dp"
                    android:text="Sequel"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sequel"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:textColor="@color/white"
                    android:background="@drawable/my_button"
                    android:elevation="8dp"
                    android:fontFamily="@font/actor"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="No \nsequeal"
                    android:textStyle="bold" />
        </LinearLayout>
</LinearLayout>




                </LinearLayout>
</ScrollView>

</RelativeLayout>