<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayouta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardtoshow_wo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/episodeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:id="@+id/notbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/downloadchoice"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:padding="10dp"
                android:text="watch"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/downloadchoice"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="#000"
                android:background="#C490E4"
                android:visibility="visible"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
