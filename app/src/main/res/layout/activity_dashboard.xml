<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboarduSER"
    android:background="@color/black">

  <TextView
      android:id="@+id/UserNameDisplay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="DASHBOARD"
      android:layout_centerHorizontal="true"
      android:textColor="@color/white"
      android:textSize="24dp"
      android:fontFamily="sans-serif-condensed-medium"
      android:layout_marginTop="25dp"
      />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_navigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="#393e46"
      app:menu="@menu/bottom_navigation" />

  <Button
      android:id="@+id/notifyBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:onClick="notifyBtn"
      android:text="Test Notification" />

  <Button
      android:id="@+id/ADS_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:layout_centerHorizontal="true"
      android:text="Get 1x"
      android:visibility="gone"
      android:layout_below="@+id/Rewardsads"/>

  <com.google.android.gms.ads.AdView
      xmlns:ads="http://schemas.android.com/apk/res-auto"
      android:id="@+id/adView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_above="@+id/bottom_navigation"
      ads:adSize="BANNER"
      ads:adUnitId="ca-app-pub-6544805297981669/2318542315">
  </com.google.android.gms.ads.AdView>

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="INCOME"
      android:textSize="18dp"
      android:layout_marginTop="25dp"
      android:layout_centerHorizontal="true"
      android:textColor="@color/white"
      android:fontFamily="@font/roboto"
      android:textStyle="bold"
      android:layout_below="@+id/UserNameDisplay"
      android:visibility="gone"/>
  <TextView
      android:id="@+id/Rewardsads"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="24sp"
      android:layout_marginTop="18dp"
      android:textStyle="bold"
      android:textColor="@color/white"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/textView3"/>

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1) 100 Point = 10 â‚¹ \n2) You have to watch full video to get point\n3) after completing 100 points you \n    can contact me.\n4) You have to wait for few secs after\n     watch video to watch another"
      android:textStyle="normal"
      android:textSize="18dp"
      android:layout_marginBottom="50dp"
      android:textColor="@color/white"
      android:layout_centerHorizontal="true"
      android:fontFamily="sans-serif"
      android:layout_above="@+id/adView"
      android:visibility="gone"/>

  <Button
      android:id="@+id/UnityAds"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/Rewardsads"
      android:layout_marginTop="100dp"
      android:text="Get 2x"
      android:visibility="visible"/>

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_above="@+id/adView"
      android:text="Work in Progress...."
      android:textColor="@color/white"
      />

  <Button
      android:id="@+id/streamBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
      android:layout_below="@+id/notifyBtn"
      android:text="stream" />


</RelativeLayout>