<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:layout_gravity="center"
    >




    <LinearLayout
        android:id="@+id/menu_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:padding="0dp">


        <!--                        <ImageView-->
        <!--                            android:layout_width="40dp"-->
        <!--                            android:layout_height="50dp"-->
        <!--                            android:layout_alignParentEnd="true"-->
        <!--                            android:layout_centerVertical="true"-->
        <!--                            android:padding="5dp"-->
        <!--                            android:src="@drawable/ic_account" />-->

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="src_in"
            android:elevation="4dp"
            android:fontFamily="@font/covered_by_your_grace"
            android:paddingStart="10dp"
            android:text="Search It"
            android:textColor="@color/textTheme"
            android:textSize="25dp"
            android:layout_marginTop="12dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="12dp"
            android:elevation="50dp">

            <RelativeLayout
                android:id="@+id/searchLayoutRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="50dp"
                android:requiresFadingEdge="vertical"
                android:outlineAmbientShadowColor="@color/white">

                <EditText
                    android:id="@+id/M_edtSearch"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="11dp"
                    android:layout_toStartOf="@+id/animeSearchIcon"
                    android:fontFamily="@font/roboto"
                    android:hint="search..."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"/>

                <ImageView
                    android:id="@+id/M_searchbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:onClick="M_setBtnSearch"
                    android:src="@drawable/search_icon" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <ImageView
        android:visibility="gone"
        android:id="@+id/not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/saitamaa"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/menu_bar_layout"
        />

    <ProgressBar
        android:id="@+id/M_resultProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        tools:ignore="NotSibling"
        android:layout_below="@+id/menu_bar_layout"
        android:background="@color/white"/>
    <androidx.recyclerview.widget.RecyclerView

        android:background="#1c1427"
        android:id="@+id/movie_search_result_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menu_bar_layout"
        android:layout_marginTop="0dp"
        android:paddingTop="2dp"
        android:layout_above="@+id/M_loadmoreProgressBar"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/M_loadmoreProgressBar"
        android:visibility="gone"/>
</RelativeLayout>